<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node JS</title>
    <%- include('include/bootstrap_header') %>
</head>
<body class="bg-light">
 <%- include('include/navbar') %>
  <div class="container mt-5">
    <div class="card shadow-lg rounded">
      <div class="card-body">
        <h2 class="card-title text-center mb-4 text-primary">User Registration</h2>
        
        <form method="POST" action="/index">
          <!-- Name -->
          <div class="mb-3">
            <label for="username" class="form-label">Enter Name</label>
            <input type="text" required maxlength="25" id="username" name="username" class="form-control" placeholder="Username">
          </div>

          <!-- Email -->
          <div class="mb-3">
            <label for="email" class="form-label">Enter Email ID</label>
            <input type="email" required id="email" name="email" class="form-control" placeholder="example@email.com">
          </div>

          <!-- Age -->
          <div class="mb-3">
            <label for="age" class="form-label">Enter Your Age</label>
            <input type="number" required id="age" name="age" class="form-control" min="1" max="120">
          </div>

          <!-- Role -->
          <div class="mb-3">
            <label class="form-label">Select Your Role</label>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="role" value="User" id="roleUser" required>
              <label class="form-check-label" for="roleUser">User</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="role" value="Admin" id="roleAdmin">
              <label class="form-check-label" for="roleAdmin">Admin</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="role" value="Editor" id="roleEditor">
              <label class="form-check-label" for="roleEditor">Editor</label>
            </div>
          </div>

          <!-- Submit Button (Centered and Large Width) -->
          <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-4 btn-lg">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  
